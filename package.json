{
  "name": "reacts-components-typescript-demo",
  "version": "0.0.9",
  "description": "react common components library",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run clean:lib && npm run generate-entries && tsc && npm run copy",
    "bump": "npm version patch",
    "clean:entries": "rimraf ./components/*.*",
    "clean:lib": "rimraf ./lib",
    "copy": "node build-scripts/copy ./ ./lib \".npmignore\" \"package.json\"",
    "generate-component": "node build-scripts/generate-component",
    "generate-entries": "npm run clean:entries && node build-scripts/generate-components-entries",
    "test": "jest"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/enzyme": "^3.1.5",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^21.1.8",
    "@types/react": "^16.0.28",
    "awesome-typescript-loader": "^3.4.1",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "jest": "^21.2.1",
    "raf": "^3.4.0",
    "recursive-copy": "^2.0.7",
    "rimraf": "^2.6.2",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "react": "^16.2.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
